{% set navPages = collections.all | eleventyNavigation %}

<input id="mobile-menu" type="checkbox" class="show">
<label for="mobile-menu" class="burger pseudo button">Menu</label>

<div class="menu">
{%- for entry in navPages %}
  <a href="{{ entry.url | url }}"{% if entry.url == page.url %} data-current="current item"{% endif %} class="pseudo button">{{ entry.title }}</a>
{%- endfor %}
</div>
